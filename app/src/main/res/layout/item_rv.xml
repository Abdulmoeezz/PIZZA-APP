<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:elevation="0.0dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/_5sdp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundedcorners"
            >



            <ImageView
                android:id="@+id/img_crop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/round_corner_top"
                android:scaleType="centerInside"
                android:src="@drawable/backgroundimage"


                />

            <TextView
                android:id="@+id/txt_carrot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrot"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/img_crop"
                />



            <TextView
                android:id="@+id/quantiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/txt_carrot"
                />


            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@+id/quantiy"
                android:layout_below="@id/txt_carrot"
                />



<Button
    android:id="@+id/addToCart"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_width="@dimen/_100sdp"
    android:background="@drawable/button_round_red"
    android:text="Add"
    android:textSize="@dimen/_10sdp"
    android:textColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"/>






        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>